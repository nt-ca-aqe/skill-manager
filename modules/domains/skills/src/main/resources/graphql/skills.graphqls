type Skill {
    id: ID!
    label: String!
    description: String
    tags: [String]!
}

type SkillsPage {
    content: [Skill]!
    pageIndex: Int!
    pageSize: Int!
    totalElements: Int!
    hasPrevious: Boolean!
    hasNext: Boolean!
}

extend type Query {
    getSkillById(id: ID!): Skill
    getSkillsPage(index: Int, size: Int): SkillsPage!
    searchSkills(query: String!, index: Int, size: Int): SkillsPage!
    suggestSkills(input: String!, max: Int): [Suggestion]!
}

input SkillInput {
    label: String!
    description: String
    tags: [String]
}

extend type Mutation {
    createSkill(input: SkillInput!) : Skill!
    deleteSkillById(id: ID!) : Boolean!
}
