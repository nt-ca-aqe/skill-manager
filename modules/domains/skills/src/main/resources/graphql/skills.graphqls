type Skill {
    id: ID!
    label: String!
    description: String
    tags: [String]!
}

type SkillsPage {
    content: [Skill]!
    pageIndex: Int!
    pageSize: Int!
    totalElements: Int!
    hasPrevious: Boolean!
    hasNext: Boolean!
}

extend type Query {
    getSkillsPage(index: Int!, size: Int!): SkillsPage
    getSkillById(id: ID!): Skill
}

extend type Mutation {
    createSkill(label: String!, description: String, tags: [String!]) : Skill!
    deleteSkillById(id: ID!) : Boolean!
}
