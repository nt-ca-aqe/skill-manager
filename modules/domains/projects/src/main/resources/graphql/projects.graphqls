type Project {
    id: ID!
    label: String!
    description: String!
}

type ProjectsPage {
    content: [Project]!
    pageIndex: Int!
    pageSize: Int!
    totalElements: Int!
    hasPrevious: Boolean!
    hasNext: Boolean!
}

extend type Query {
    getProjectsPage(index: Int!, size: Int!): ProjectsPage!
    getProjectById(id: ID!): Project
}

extend type Mutation {
    createProject(label: String!, description: String!) : Project!
    deleteProjectById(id: ID!) : Boolean!
}
